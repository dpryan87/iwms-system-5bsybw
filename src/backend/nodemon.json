{
  "watch": [
    "src"
  ],
  "ext": ".ts,.js,.json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/coverage",
    "src/tests"
  ],
  "exec": "ts-node -r tsconfig-paths/register ./src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "verbose": true,
  "restartable": "rs",
  "delay": 1000,
  "colours": true,
  "legacyWatch": false,
  "signal": "SIGTERM",
  "stdin": false,
  "stdout": true,
  "watchOptions": {
    "followSymlinks": false,
    "usePolling": false,
    "interval": 1000
  }
}